<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate_lesson?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;serverTimezone=UTC</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">100</property>
        <property name="current_session_context_class">thread</property>
<!--      Создание таблиц по описанию сущностей   -->
        <property name="hibernate.hbm2ddl.auto">update</property>
<!--      Вывести запрос в формате sql -->
        <property name="show_sql">true</property>
<!--        Форматирование запросов -->
        <property name="hibernate.format_sql">true</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="hibernate.jdbc.batch_size">10</property>

        <mapping class="ru.geekbrains.entities.User"></mapping>
        <mapping class="ru.geekbrains.entities.Product"></mapping>
        <mapping class="ru.geekbrains.entities.Orders"></mapping>
        <mapping class="ru.geekbrains.entities.SaleDetails"></mapping>

    </session-factory>
</hibernate-configuration>
